{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=UserDocumentDB;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True;",
    "HangfireConnection": "Server=localhost,1433;Database=UserDocumentDB;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True;"
  },
  "FileStorage": {
    "UploadPath": "uploads",
    "PdfPath": "uploads/pdfs"
  },
  "Jobs": {
    "DocumentProcessingDelaySeconds": 30,
    "MaxRetryAttempts": 2,
    "FirstRetryDelayMinutes": 5,
    "SecondRetryDelayMinutes": 10
  },
  "Cleanup": {
    "RetentionDays": 7,
    "DeleteFailedDocumentsOnly": true
  }
}
